---
export interface Props {
	id: string;
	name: string;
	label: string;
	options: { value: number; label: string }[];
	disabled?: boolean;
}

const { id, name, label, options, disabled = false } = Astro.props;
---

<div class="flex flex-col mt-1">
	<label for={id} class="block text-xs text-gray-900 dark:text-white">{label}</label
	>
	<select
		id={id}
		name={name}
		disabled={disabled}
		class="mt-1 block w-full text-xs rounded-md border-0 py-2 pl-2 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:leading-6 border-transparent"
	>
		{
			options.map((item) => (
				<option value={item.value}>{item.label}</option>
			))
		}
	</select>
</div>
