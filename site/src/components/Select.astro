---
export interface Props {
  id: string;
  name: string;
  label: string;
  options: { value: number; label: string }[];
  disabled?: boolean;
}

const { id, name, label, options, disabled = false } = Astro.props;
---

<div class="flex flex-col">
  <label for={id} class="block font-medium leading-6 text-gray-900">{label}</label>
  <select 
    id={id} 
    name={name} 
    disabled={disabled}
    class="mt-2 block w-full rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600 sm:leading-6 border-transparent"
  >
    {options.map((item) => (
      <option value={item.value}>{item.label}</option>
    ))}
  </select>
</div>